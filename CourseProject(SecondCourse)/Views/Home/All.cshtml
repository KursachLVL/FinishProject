@model PagedList.IPagedList<CourseProject_SecondCourse_.Models.Event>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2>All</h2>
<p>
    Notice that we can see the User info (UserName) and profile info such as HomeTown for the user as well.
    This was possible because we associated the User object with a ToDo object and hence
    we can get this rich behavior.
</p>



<table class="table">
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                  + Convert.ToBase64String(item.Image) + "\" />")
        </td>
        <td>
            <a href="/Event/EventPage/@item.Id">@item.Name</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateTime)
        </td>
    </tr>
    }
</table>
<br />
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("All", new { page }))
