@using CourseProject_SecondCourse_.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}


<!DOCTYPE html>
<head>
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
  <div class="login-form">
      
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
        {

            @Html.AntiForgeryToken()
            <h2>Вход</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })

                @*<input type="text" class="form-control" placeholder="Email " id="Email">*@
                <i class="fa fa-user"></i>
            </div>
            <div class="form-group">

                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <i class="fa fa-log"></i>

            </div>
            <div class="form-group">
                <div>
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <div>
                
                <input type="submit" value="Log-In" class="log-btn" />
            </div>

            <p>
                @Html.ActionLink("Регистрация нового пользователя", "Register")
            </p>
  
                }
            </section>
       </div>
    
</body>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
