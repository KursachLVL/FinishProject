@model CourseProject_SecondCourse_.Models.ApplicationUser
@{
    ViewBag.Title = "Мой аккаунт";
}
<body style="background-image:url(../../Images/oboik.ru_50639.jpg)">
    <table class="table">
        <tr>
            <td>
                @Html.Raw("<img style='width:250px; height:200px;' src=\"data:image/jpeg;base64,"
                                                                    + Convert.ToBase64String(Model.Image) + "\" />")
            </td>
            <td>
                <h1 style="color:aliceblue">Имя: @Model.Name</h1>
                <p>
                    <h1 style="color:aliceblue">Фамилия: @Model.Surname</h1>
                </p>
                <p>
                    <h1 style="color:aliceblue">E-mail: @Model.Email</h1>
                </p>
            </td>
        </tr>

    </table>
    <br />
    <div id="myfavorites" style="font-size:36px">
        @Ajax.ActionLink("Избранные", "MyFavorites", "Event", new AjaxOptions { UpdateTargetId = "myfavorites" })
    </div>
    <div id="myevents" style="font-size:36px">

        @Ajax.ActionLink("Мои события", "MyEvents", "Event", new AjaxOptions { UpdateTargetId = "myevents" })


    </div>

    <div style="font-size:36px">

        @Html.ActionLink("Создать мероприятия", "Create", "Event")
        <p> @Html.ActionLink("Изменить параметры учетной записи", "Edit", "Account")</p>
    </div>
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

</body>



