@using CourseProject_SecondCourse_.Models
@model Event
@{
    ViewBag.Title = @Model.Name;

}
<h2>
    @Html.DisplayFor(model => model.Name)
</h2>


<table class="table">
    <tr>
        <th>Категория</th>
        <td>@Html.DisplayFor(model => model.Name)</td>

    </tr>
    <tr>
        <th>Дата</th>
        <td>@Html.DisplayFor(model=>model.dateTime)</td>
    </tr>
    <tr>
        <th>Описание</th>
        <td>@Html.DisplayFor(model => model.Description)</td>
    </tr>



</table>
<div>
    @if ((ViewBag.Compare == 0)&&(ViewBag.Check==false))
     {
       
        <div>
            @using (Ajax.BeginForm("AddFavorite", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "results",HttpMethod="GET"}))
            {

                <input type="submit" value="Add" id="@Model.Id" class="btn btn-default" />
            }

            
            <div id="results"></div>
                    </div>
        @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    }
    @if(ViewBag.Compare==1)
    {
        <p>@ViewBag.MessageCompare</p>
    }
    @if (ViewBag.Check == true)
    {
        <p>@ViewBag.MessageCheck</p>
    }
  </div>



